{
  "name": "salvium-landing-page",
  "version": "1.0.0",
  "description": "Official landing page for the Salvium blockchain project",
  "author": "Salvium Team",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/salvium/landing-page"
  },
  "bugs": {
    "url": "https://github.com/salvium/landing-page/issues"
  },
  "homepage": "https://salvium.io",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "defi",
    "landing-page",
    "salvium"
  ],
  "scripts": {
    "start": "live-server --port=3000",
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:prod": "NODE_ENV=production tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "aos": "^2.3.4",
    "axios": "^1.6.2",
    "plotly.js-dist": "^2.27.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
